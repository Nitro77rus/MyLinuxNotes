! стиль полосы прокрутки - rxvt (по умолчанию), plain (самый компактный), next, или xterm
URxvt.scrollstule: plan
URxvt.scrollBar: false

!Всякое
URxvt.font: xft:Hack Nerd Font Mono:size=9
URxvt*geometry: 84x22
URxvt.internalBorder: 5
URxvt.letterSpace: 0
URxvt.antialias: true
URxvt.iconFile: /usr/share/icons/Papirus/48x48/apps/urxvt.svg

! Прозрачность --------------------------------------------------------------

URxvt*.transparent: true
! URxvt*.shading: 0 to 99 darkens, 101 to 200 lightens
URxvt*.shading: 40

! Цвета терминала ------------------------------------------------------------

! Схема tangoesque 
*background: #111111
*foreground: #babdb6
! Black (not tango) + DarkGrey (Чёрный (не танго)+ТёмноСерый)
*color0:  #000000
*color8:  #555753
! DarkRed + Red (ТёмноКрасный+Красный)
*color1:  #ff6565
*color9:  #ff8d8d
! DarkGreen + Green (ТёмноЗелёный+Зелёный)
*color2:  #93d44f
*color10: #c8e7a8
! DarkYellow + Yellow (ТёмноЖёлтый+Жёлтый)
*color3:  #eab93d
*color11: #ffc123
! DarkBlue + Blue (ТёмноСиний+Синий)
*color4:  #204a87
*color12: #3465a4
! DarkMagenta + Magenta (ТёмноПурпурный+Пурпурный)
*color5:  #ce5c00
*color13: #f57900
!DarkCyan + Cyan (both not tango) (ТёмноГолубой+Голубой (оба не танго))
*color6:  #89b6e2
*color14: #46a4ff
! LightGrey + White (СветлоСерый+Белый)
*color7:  #cccccc
*color15: #ffffff

! фон -------------------------------------------------------------------------
URxvt*background: #000000
URxvt*foreground: #ced1d8

!Шрифт ------------------------------------------------------------------------
!URxvt.font: xft:monospace:size=11.5:antialias=true:autohint=false
URxvt.boldFont: xft:monospace:style=bold:size=11.5:antialias=true:autohint=false

!копи/паст -------------------------------------------------------------------
URxvt.iso14755:        false
URxvt.iso14755_52:     false

URxvt.clipboard.autocopy: true
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

!Остальное, перл плагины для открытия ссылок по клику и некоторые кастомные клавиши
URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select,matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true
URxvt.matcher.button: 1

URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

